{
    "label": "Portos",
    "source": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/onaio/cycloneidai-2019-data/master/moz/infrastructure/portos.geojson",
      "join": ["unique_id", "unique_id"]
    },
    "type": "symbol",
    "minZoom": 0,
    "paint": {
        "text-color": "#000",
        "text-halo-color": "#fff",
        "text-halo-width": 1.3,
        "text-halo-blur": 1
    },
    "layout": {
        "text-size": {
            "stops": [
                [
                    5,
                    0
                ],
                [
                    7,
                    5
                ],
                [
                    8,
                    10
                ]
            ]
        },
        "icon-image": "harbor-15",
        "icon-allow-overlap": false,
        "icon-ignore-placement": false
    },
    "categories": {
        "breaks": "no",
        "label": [
            "Porto"
        ],
        "type": [
            "Porto"
        ],
        "color": [
            "#000000"
        ]
    },
    "popup": {
        "header": "mainport",
        "body": "<p style=text-align:left;> <small><b>Descrição:</b> {{type}} <br> <i>Clique para ver os detalhes dos portos</i> </small><span style=float:right;>"
      },
      "detail-view": {
        "UID": "unique_id",
        "title": {
            "prop": "mainport",
            "mustache": "{{{mainport}}}"
        },
        "sub-title": {
            "prop": "size",
            "mustache": "{{{size}}}"
        },
        "basic-info": [
            {
                "value": {
                    "prop": "size",
                    "mustache": "{{{size}}}"
                },
                "alt": "Tamanho",
                "useAltAsPrefix": true
            },
            {
                "value": {
                    "prop": "type",
                    "mustache": "{{{type}}}"
                },
                "alt": "Tipo",
                "useAltAsPrefix": true
            }
        ]
    },
    "aggregate": {
        "filter": [
            "size",
            "type"
        ],
        "sub-filter": [
            "", 
            ""
        ],
        "accepted-filter-values": [
            "all",
            "all"
        ],
        "accepted-sub-filter-values": [
            "", 
            ""
        ],
        "filter-label": [
            "Tamanho",
            "Tipo"
        ]
    },
    "visible": false,
    "credit": "<p><i>Aumente e diminua o zoom para ver mais áreas <br>  Clique para ver os detalhes dos portos</i></p>"
}